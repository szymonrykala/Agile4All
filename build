#!/bin/bash

ENV_FILE=./env/.env
set -a
source $ENV_FILE
set +a

BUILD_ARGUMENTS="$@"
ARGUMENTS="-p $PROJECT_NAME -f ./docker-compose.yml -f ./docker-compose.dev.yml"

echo "Running production build"

ENV_FILE=$ENV_FILE          \
docker                      \
    compose                 \
    $ARGUMENTS              \
    build                   \
    $BUILD_ARGUMENTS